<main class="pt-20">
  <section class="max-w-5xl mx-auto px-4 mt-4">
    <div class="relative min-h-[300px] sm:min-h-[400px] md:min-h-[500px] flex items-center justify-center">
      <%= image_tag "Group_1_#{@tactic.slug}.svg",
          alt: @tactic.title,
          class: "max-w-full max-h-full object-contain" %>
    </div>

    <div class="max-w-3xl mx-auto mt-6">
      <div class="flex items-center justify-between text-sm text-gray-600 mb-2 px-2 sm:px-0">
        <span class="font-semibold text-gray-900">戦術解説 <%= @tactic_position %> / <%= @total_tactics %></span>
        <span>残り<%= @remaining_tactics %>個</span>
      </div>
      <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
        <div class="h-full bg-blue-600 transition-all duration-300" style="width: <%= @progress_percentage %>%;"></div>
      </div>
    </div>
  </section>
</main>

<div class="tactic max-w-3xl mx-auto px-4 py-6 space-y-6">
  <h1 class="text-2xl font-bold text-gray-900 md:text-3xl">
    <%= @tactic.title %>
  </h1>

  <% if @tactic.trigger.present? %>
    <p class="text-base md:text-lg">
      <strong>トリガー：</strong><%= @tactic.trigger %>
    </p>
  <% end %>

  <% if @tactic.description.present? %>
    <div class="description text-gray-800 leading-relaxed text-base md:text-lg">
      <%= simple_format(@tactic.description) %>
    </div>
  <% end %>

  <% steps = @tactic.steps || {} %>

  <% success_conditions = steps["success_conditions"] || steps["success"] %>
  <% if success_conditions.present? %>
    <div>
      <h2 class="text-xl font-semibold mb-2">✅ 成功条件</h2>
      <ul class="list-disc pl-5 space-y-1">
        <% success_conditions.each do |cond| %>
          <li class="text-gray-800"><%= cond %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% common_failures = steps["common_failures"] || steps["failures"] %>
  <% if common_failures.present? %>
    <div>
      <h2 class="text-xl font-semibold mb-2">⚠️ よくある失敗</h2>
      <ul class="list-disc pl-5 space-y-1">
        <% common_failures.each do |f| %>
          <li class="text-gray-800"><%= f %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @tactic.counters.present? %>
    <div>
      <h2 class="text-xl font-semibold mb-2">🔄 カウンター</h2>
      <p class="text-base md:text-lg"><%= @tactic.counters %></p>
    </div>
  <% end %>
</div>

<div class="mt-8 flex flex-col md:flex-row gap-4 md:gap-6 justify-center">
  <%= link_to "← 前の戦術",
      tactic_path(@prev_tactic),
      class: "px-4 py-2 rounded bg-gray-200 text-center hover:bg-gray-300 text-gray-900 font-medium" %>

  <%= link_to "次の戦術 →",
      tactic_path(@next_tactic),
      class: "px-4 py-2 rounded bg-blue-600 text-white text-center hover:bg-blue-700 font-medium" %>
</div>
