<h1 class="text-xl font-bold mb-4">戦術一覧</h1>

<div class="mb-4">
  <%= link_to "新規作成", new_tactic_path,
              class: "inline-block rounded bg-blue-600 px-3 py-2 text-white hover:bg-blue-700" %>
</div>

<table class="w-full border-collapse">
  <thead>
    <tr class="bg-gray-100">
      <th class="border px-3 py-2 text-left">タイトル</th>
      <th class="border px-3 py-2 text-left">スラッグ</th>
      <th class="border px-3 py-2 text-left">トリガー</th>
      <th class="border px-3 py-2 text-left">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @tactics.each do |t| %>
      <tr>
        <td class="border px-3 py-2"><%= t.title %></td>
        <td class="border px-3 py-2"><%= t.slug %></td>
        <td class="border px-3 py-2"><%= t.trigger %></td>
        <td class="border px-3 py-2">
          <%= link_to "編集", edit_tactic_path(t), class: "text-blue-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>