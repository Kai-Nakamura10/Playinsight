<main class="pt-20">
  <section class="max-w-5xl mx-auto px-4 mt-4">
    <div class="px-4 py-6 sm:px-6 lg:px-8 max-w-3xl mx-auto">
      <h1 class="text-2xl sm:text-3xl font-bold mb-6 text-gray-900 break-words">
        <%= @rule.title %>
      </h1>

      <div class="mb-6">
        <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
          <span class="font-semibold text-gray-900">基本ルール解説 <%= @rule_position %> / <%= @total_rules %></span>
          <span>残り<%= @remaining_rules %>個</span>
        </div>
        <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
          <div class="h-full bg-blue-600 transition-all duration-300" style="width: <%= @progress_percentage %>%;"></div>
        </div>
      </div>

      <div class="prose prose-sm sm:prose-base max-w-none mb-6 text-gray-800">
        <%= simple_format(@rule.body) %>

        <p class="text-sm text-gray-500 mt-4">ID: <%= @rule.id %></p>
      </div>

      <% if @next_rule.present? %>
        <div class="mt-8">
          <%= link_to "次のルール →",
            rule_path(@next_rule),
            class: "inline-block px-4 py-3 rounded-lg bg-blue-600 text-white text-center
                  hover:bg-blue-700 w-full sm:w-auto" %>
        </div>
      <% end %>
    </div>
  </section>
</main>
