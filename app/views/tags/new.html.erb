<main class="pt-20">
  <section class="max-w-5xl mx-auto px-4 mt-4">
    <div class="max-w-3xl mx-auto px-4 py-8">
      <div class="bg-white rounded-2xl shadow-sm p-6">
        <h1 class="text-2xl font-semibold mb-6">タグ作成</h1>
        <%= form_with model: @tag, local: true, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :name, "タグ名", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, class: "w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
          </div>

          <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <%= form.submit "作成", class: "inline-flex justify-center rounded-lg bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
            <%= link_to 'タグ一覧へ戻る', tags_path, class: 'inline-flex justify-center rounded-lg bg-gray-100 text-gray-700 px-4 py-2 hover:bg-gray-200' %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</main>