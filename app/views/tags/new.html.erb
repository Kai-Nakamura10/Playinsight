<h1>タグ作成</h1>
<%= form_with model: @tag, local: true do |form| %>
  <div class="field">
    <%= form.label :name, "タグ名" %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit "作成" %>
  </div>
<% end %>
<%= link_to 'タグ一覧へ戻る', tags_path, class: 'inline-block bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200' %>