<h2 class= "text-center"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3 shadow-sm rounded">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="field mb-3 shadow-sm rounded">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="field mb-3 shadow-sm rounded">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="field mb-3 shadow-sm rounded">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="actions text-center">
      <%= f.submit t('.create'), class: "relative z-50 w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
