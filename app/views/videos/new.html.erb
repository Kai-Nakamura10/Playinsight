<div class="container mx-auto px-4 py-6">
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6">動画アップロード</h1>

    <%= form_with model: @video, local: true, html: { id: "upload-form", class: "space-y-6" } do |f| %>

      <div>
        <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :title, placeholder: "タイトル", 
              class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description, placeholder: "説明", rows: 4,
              class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :visibility, "公開設定", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :visibility,
              Video.visibilities.keys.map { |k| [t("enums.video.visibility.#{k}"), k] },
              { prompt: "選択してください" },
              class: "block w-full px-3 py-2 border rounded-md shadow-sm bg-white focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :file, "動画ファイル", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.file_field :file,
              class: "block w-full text-sm text-gray-700 file:mr-3 file:py-2 file:px-4 file:border file:rounded file:bg-gray-100 file:hover:bg-gray-200" %>
      </div>

      <div>
        <%= f.label :thumbnail, "サムネイル画像", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.file_field :thumbnail, accept: "image/*",
              class: "block w-full text-sm text-gray-700 file:mr-3 file:py-2 file:px-4 file:border file:rounded file:bg-gray-100 file:hover:bg-gray-200" %>
      </div>

      <div>
        <%= f.submit "アップロード",
              id: "upload-button",
              class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
      </div>

    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "動画一覧へ", videos_path,
            class: "inline-block text-gray-700 hover:text-gray-900 underline" %>
    </div>
  </div>
</div>