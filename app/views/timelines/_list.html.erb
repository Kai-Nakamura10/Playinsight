<div id="timelines_list">
  <% if timelines.present? && timelines.any? %>
    <% timelines.each do |timeline| %>
      <div id="<%= dom_id(timeline) %>" class="mb-4 p-4 bg-gray-50 rounded shadow">
        <p class="text-sm text-gray-500 mb-2">開始時間: <%= timeline.start_seconds %> 秒</p>
        <p class="text-gray-800"><%= timeline.body.presence || timeline.title %></p>
        <div class="mt-2">
          <%= button_to "削除", timeline_path(timeline), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "text-red-600" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">タイムラインはまだありません。</p>
  <% end %>
</div>